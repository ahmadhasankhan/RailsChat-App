<h2>Sign up</h2>
<div class="row">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>
        <div class="col-lg-6">
            <div class="input-group input-group-lg">
                <span class="input-group-addon glyphicon glyphicon-lock"></span>
                <%= f.email_field :email, autofocus: true, :class => "form-control", :placeholder => "Enter Your Email-Id" , :required=>true %>
            </div>
            </br>

            <div class="input-group input-group-lg">
                <span class="input-group-addon glyphicon glyphicon-eye-open"></span>
                <% if @validatable %><i>(<%= @minimum_password_length %> characters minimum)</i>
                <% end %><br/>
                <%= f.password_field :password, autocomplete: "off", :class => "form-control", :placeholder => "Choose a password", :required=>true %>
            </div>
            </br>
            <div class="input-group input-group-lg">
                <span class="input-group-addon glyphicon glyphicon-eye-open"></span>
                <%= f.password_field :password_confirmation, autocomplete: "off", :class => "form-control", :placeholder => "Confirm password", :required=>true %>
            </div>
            </br>

            <%= f.submit "Sign up", :class => "btn btn-primary" %>
            <%= link_to "Log in", new_session_path(resource_name), :class => "btn btn-info" %><br/>
            <%- resource_class.omniauth_providers.each do |provider| %>
                <%= link_to "Signup with #{provider.to_s.titleize}", omniauth_authorize_path(resource_name, provider), :class => "fa fa-facebook" %>
                <br/>
            <% end -%>
    <% end %>

    </div>
</div>